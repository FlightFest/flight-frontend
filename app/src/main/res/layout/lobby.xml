<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Yellow bar with Vueling logo at the top -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFC62F">

        <ImageView
            android:id="@+id/vueling_logo"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/vueling_logo" />

    </RelativeLayout>

    <!-- Countdown timer in center of the screen -->
    <TextView
        android:id="@+id/countdown_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72sp"
        android:textColor="#000000"
        android:layout_below="@id/top_bar"
        android:layout_centerHorizontal="true" />

    <!-- List of waiting players -->
    <LinearLayout
        android:id="@+id/player_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countdown_timer"
        android:orientation="horizontal">

        <!-- Left column -->
        <LinearLayout
            android:id="@+id/left_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" />

        <!-- Right column -->
        <LinearLayout
            android:id="@+id/right_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" />

    </LinearLayout>

</RelativeLayout>
