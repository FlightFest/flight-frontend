<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Yellow bar with Vueling logo at the top -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FEE12B">

        <ImageView
            android:id="@+id/vueling_logo"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/vueling_logo"
            android:padding="10dp" />
    </RelativeLayout>

    <!-- Logo and text input in the middle of the screen -->
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/vuelingo_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/player_name_input"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:inputType="text"
            android:textAlignment="center"
            android:layout_below="@id/main_logo"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
